<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.85)), url(<%= @list.photo.attached? ?  (cl_image_path @list.photo.key)  : "http://source.unsplash.com/featured/?#{@list.name}&#{rand(1000)}" %>)">
  <h2>Movie List : <%= @list.name %></h2>
</div>
<div class="container">
  <%#= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary my-2"%>
  <div class="cards-main">
    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
          <%= bookmark.movie.title %>
          <%= link_to bookmark_path(bookmark), class: "card-delete",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="form-new-movie">
      <%= render template: "bookmarks/new" %>
    </div>
  </div>
</div>
