<div class="container">
  <h2>Movie List : <%= @list.name %></h2>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary my-2"%>
  <div class="cards-main">
    <div class="cards">
      <% @list.movies.each do |movie| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
          <%= movie.title %>
          <%= link_to bookmark_path(@list.bookmarks.find_by_movie_id(movie)), class: "card-delete",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            X
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="card-form">
      <%= render template: "bookmarks/new" %>
    </div>
  </div>
</div>
