<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.85)), url(<%="http://source.unsplash.com/featured/?movies&#{rand(1000)}"%>)">
	<h1>This is a movie watch list</h1>
</div>
<div class="container">
	<h2>My Movie Lists</h2>
	<div class="cards-index">
		<div class="cards">
			<% @lists.each do |list|%>
				<%= link_to list_path(list) do %>
					<div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url(<%= list.photo.attached? ?  (cl_image_path list.photo.key)  : "http://source.unsplash.com/featured/?#{list.name}&#{rand(1000)}" %>)'>
						<%= list.name %>
					</div>
				<% end %>
			<% end %>
		</div>
		<div class="form-new-list">
			<%= render template: "lists/new" %>
		</div>
	</div>
</div>
